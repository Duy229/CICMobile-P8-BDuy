<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập 6 Số Cuối CCCD"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="22sp"

        />

    <android.support.design.widget.TextInputLayout
        app:cardCornerRadius="20dp"
        android:id="@+id/input_card_number"
        style="@style/parent"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editTextCANNumber"
            style="@style/modifiedEditText"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/eddittext_white"
            android:maxLines="1" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/canCancelBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:background="@drawable/bg_transparent_ripple"
                android:text="HỦY BỎ"
                android:textColor="#8A8A8A"
                android:textSize="14sp"
                android:visibility="visible" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/canConfirmBtn"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:background="@drawable/gradientblue_ripple"
                    android:text="ĐỒNG Ý"
                    android:textColor="@color/colorPrimary900"
                    android:textSize="14sp"
                    android:visibility="visible" />

        </LinearLayout>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>