<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <!-- Specify the default background color when the checkbox is unchecked -->
            <solid android:color="#FFFFFF" />
            <!-- You can add other attributes like corner radius, stroke, etc. as needed -->
        </shape>
    </item>
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Specify the background color when the checkbox is checked (in this case, red) -->
            <solid android:color="@color/colorPrimary" />
            <!-- You can add other attributes like corner radius, stroke, etc. as needed -->
        </shape>
    </item>
</selector>
